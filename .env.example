# ANNA - Environment Configuration
# Copy this file to .env and fill in the values

# SECURITY
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,.yourdomain.com

# DATABASE
DATABASE_URL=postgres://annacash:password@localhost:5432/annacash
DATABASE_NAME=annacash
DATABASE_USER=annacash
DATABASE_PASSWORD=your-secure-password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# REDIS (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# EMAIL
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@anna.tz

# FILE STORAGE
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_STORAGE_BUCKET_NAME=anna-media
AWS_S3_REGION_NAME=af-south-1

# SMS API (optional - for Tanzania)
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://smsprovider.tz/api/send

# LOGGING
LOG_LEVEL=INFO
